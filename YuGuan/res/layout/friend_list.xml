<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/friendPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/head1_128" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/friendTitle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:text="AAAAAAAAA"
            android:textColor="#000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/friendTitle"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/friendSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/girl_48" 
                android:contentDescription="sss"/>

            <TextView
                android:id="@+id/friendAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="bbbbbbbbbbbbbb"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>